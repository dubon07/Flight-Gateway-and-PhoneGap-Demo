<!-- phonegap build config.xml syntax -->
<?xml version="1.0" encoding="UTF-8"?>
  <widget xmlns     = "http://www.w3.org/ns/widgets"
           xmlns:gap = "http://phonegap.com/ns/1.0"
           id        = "com.phonegap.flightDemo"
           version   = "1.0.0">
   <name>SAP Flights Demo (NWG+PG)</name>

<preference name="phonegap-version" value="2.3.0" />

<!-- to enable individual permissions use the following examples -->
<feature name="http://api.phonegap.com/1.0/battery"/>
<feature name="http://api.phonegap.com/1.0/camera"/>
<feature name="http://api.phonegap.com/1.0/contacts"/>
<feature name="http://api.phonegap.com/1.0/file"/>
<feature name="http://api.phonegap.com/1.0/geolocation"/>
<feature name="http://api.phonegap.com/1.0/media"/>
<feature name="http://api.phonegap.com/1.0/network"/>
<feature name="http://api.phonegap.com/1.0/notification"/>
<feature name="http://api.phonegap.com/1.0/flashlight"/>

<description>
   Flight Demo using SAP Netweaver Gateway and Adobe PhoneGap
</description>
<!-- more info here-->
<gap:plugin name="BarcodeScanner" /> <!-- use latest release by default -->

</widget>

